<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="cn.edu.tsinghua.thss.tsmart.platform.PlatformApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="cn.edu.tsinghua.thss.tsmart.platform.Perspective"
            id="EdolaModelingPlatform.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="EdolaModelingPlatform.application"
            name="Edola Modeling Platform">
         <property
               name="windowImages"
               value="icons/compound_16.png,icons/compound_32.png">
         </property>
         <property
               name="appName"
               value="Edola Modeling Platform">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="7,252,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="cn.edu.tsinghua.thss.tsmart.editors.xml.XMLEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="bipm"
            icon="icons/alt_window_16.gif"
            id="cn.edu.tsinghua.thss.tsmart.editors.xml.XMLEditor"
            name="XML Editor">
      </editor>
      <editor
            class="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.compound.CompoundEditor"
            contributorClass="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.BIPEditorActionBarContributor"
            default="false"
            icon="icons/compound_16.png"
            id="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.compound.CompoundEditor"
            name="Compound Editor">
      </editor>
      <editor
            class="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.atomic.AtomicEditor"
            contributorClass="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.BIPEditorActionBarContributor"
            default="false"
            icon="icons/atomic_16.png"
            id="cn.edu.tsinghua.thss.tsmart.modeling.bip.editors.atomic.AtomicEditor"
            name="Atomic Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons\projects.gif"
            id="EdolaModelingPlatform.ProjectNavigator"
            name="项目"
            restorable="true">
      </view>
      <view
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons\library_obj.gif"
            id="EdolaModelingPlatform.Library"
            name="库"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               ratio="0.75"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               standalone="false">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.75"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.views.ProblemView"
               minimized="false"
               ratio="0.25"
               relationship="right"
               relative="org.eclipse.ui.views.PropertySheet">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ProblemView"
               showTitle="false"
               standalone="false">
         </view>
         <view
               id="EdolaModelingPlatform.ProjectNavigator"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
         <view
               id="EdolaModelingPlatform.Library"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerSupport">
      <markerContentGenerator
            id="EdolaModelingPlatform.markerContentGenerator1"
            name="EdolaModelingPlatform Information Generator">
      </markerContentGenerator>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="EdolaModelingPlatform.ProjectNavigator">
      </viewer>
      <viewerContentBinding
            viewerId="EdolaModelingPlatform.ProjectNavigator">
         <includes>
            <contentExtension
                  pattern="modeling.contentExtension1">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            id="modeling.navigatorContent1"
            name="name">
      </navigatorContent>
   </extension>
</plugin>
