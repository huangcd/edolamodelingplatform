public abstract class BaseConnectionModel extends BaseModel {
    private List<Point>        bendPoints  = new ArrayList<Point>();
    public final static String BEND_POINTS = "BendPoints";

    public void addBendPoint(int index, Point point) {
        bendPoints.add(index, point);
        firePropertyChange(BEND_POINTS, null, point);
    }

    public void removeBendPoint(int index) {
        Point point = bendPoints.remove(index);
        firePropertyChange(BEND_POINTS, point, null);
    }

    public void changeBendPoint(int index, Point point) {
        Point old = bendPoints.get(index);
        bendPoints.set(index, point);
        firePropertyChange(BEND_POINTS, old, point);
    }

    public List<Point> getBendPoints() {
        return bendPoints;
    }
}
